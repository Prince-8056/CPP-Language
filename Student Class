//  Student Class
#include<iostream>
using namespace std;
class Student
{
    int roll_no;
    char stud_name[30];
    char stud_address[50];
    float stud_marks;
public:
    void input_details()
    {
         cout<<"Please Enter Student Details:"<<endl<<endl;
        cout<<"Enter Student Roll No:"<<endl;
        cin>>roll_no;
        cout<<"Enter Student Name:"<<endl;
        cin>>stud_name;
         cout<<"Enter Student Address:"<<endl;
        cin>>stud_address;
        cout<<"Enter Student Marks:"<<endl;
        cin>>stud_marks;
        
        
    }
    void display_details()
    {
        cout<<"---Student details---"<<endl;
        cout<<"Roll No:"<<" "<<roll_no<<endl;
        cout<<"Name   :"<<" "<<stud_name<<endl;
        cout<<"Address:"<<" "<<stud_address<<endl;
        cout<<"Marks  :"<<" "<<stud_marks<<endl;
        
    }
    
};
int main()
{
    Student stud1;
    stud1.input_details();
    stud1.display_details();
    return 0;
}

#include<iostream>

using namespace std;

class employee
{
    private:
            int id;
            string name;

    public:
            void getdata()
            {
                cout<<"Enter Employee Id :";
                cin>>id;
                cout<<"Enter Employee Name :";
                cin>>name;
            }

            void display()
            {
                cout<<"Enter Employee Id :"<<id<<endl;
                cout<<"Enter Employee Name :"<<name<<endl;
            }
};

int main()
{
    employee e[2];
    cout<<"Enter Details:"<<endl;
    for(int i=0;i<2;i++)
    {
        e[i].getdata();
    }
    cout<<"Employee Details:"<<endl;
    for(int i=0;i<2;i++)
    {
        e[i].display();
    }
    return 0;
}
